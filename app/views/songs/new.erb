<h1>Create New Song</h1>

<form method="POST" action="/songs">
  <label>Song Name:</label><br></br>
  <input id="Name" type="text" name="song[name]"><br></br>
  <label>Artist Name:</label><br></br>
  <input id="Artist Name" type="text" name="song[artist_name]"><br></br>

  <label>Genres: </label><br></br>
  <% @genres.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%= genre.name %>
  <% end %>
  <br></br>
  <input type="submit" value="Create">
</form>
